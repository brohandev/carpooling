    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 ml-auto mr-auto">
          <div class="card card-login">
            <form id="signup-form-passenger" class="form" method="POST" action="signup_passenger">
              <div class="card-header card-header-primary text-center">
                <h4 class="card-title">Sign Up (Passenger)</h4>
              </div>
              <p class="description text-center">Enter your information below</p>
              <div class="card-body">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">face</i>
                    </span>
                  </div>
                  <input type="text" id="username" name="username" class="form-control" placeholder="Username...">
                </div>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="fa fa-mobile-phone" style="font-size:36px"></i>
                    </span>
                  </div>
                  <input type="tel" id="phone" name="phone" minlength="8" maxlength="8" class="form-control"
                    placeholder="Phone Number...">
                </div>
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">lock_outline</i>
                    </span>
                  </div>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Password...">
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary btn-round">Sign Up</button>
              </div>
              <div class="text-center">
                <a href="/signup_driver" class="btn btn-link"><u>Click here to sign up as Driver</u></a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
